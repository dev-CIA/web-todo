{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express", "node"]
  },
  "include": ["app.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
